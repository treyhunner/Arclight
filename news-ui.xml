<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="news">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="item">
            <area>1620,-14,313,55</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
        </shape>

        <clock name="clock">
            <area>1620,-2,303,50</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <template>%DATE%, %TIME%</template>
        </clock>

        <imagetype name="enclosures">
            <area>368,125,0,0</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <imagetype name="download">
            <area>368,125,0,0</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <imagetype name="ispodcast">
            <area>368,125,0,0</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <shape name="infobox">
            <area>35,13,694,621</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />

        </shape>

        <imagetype name="thumbnail">
            <area>160,23,450,296</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="updated" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="timedate" from="basetextarea">
            <area>45,420,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>45,470,674,150</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <align>left,top</align>
            <cutdown>yes</cutdown>
        </textarea>

        <buttonlist name="siteslist" from="baseshapebuttonlist">
            <position>0,669</position>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
        </buttonlist>

        <buttonlist name="articleslist" from="baserecordinglistwide">
            <area>786,549,1136,525</area>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
            <spacing>0</spacing>
        </buttonlist>

        <textarea name="nosites" from="updated">
            <area>325,454,427,203</area>
            <multiline>yes</multiline>
            <align>justify</align>
            <font>basesmall</font>
        </textarea>

    </window>

    <window name="editor">
        <area>-1,-1,790,962</area>

        <imagetype name="backimg">
            <area>0,0,790,962</area>
            <filename>images/arclight_popup_large_bg.png</filename>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>89,78,613,40</area>
            <font>basemedium</font>
            <align>allcenter</align>
            <value>Edit RSS News Feeds</value>
        </textarea>

        <textarea name="helparea" from="basetextarea">
            <area>89,138,613,280</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <align>allcenter</align>
            <value>You can edit the name, URL, and icon path for the selected RSS Feed on this screen.  You can also designate the item as a podcast.\n\nWhen you have finished editing, select "OK" or "Cancel" to continue.</value>
        </textarea>

        <textarea name="namelabel" from="basetextarea">
            <area>15,490,175,40</area>
            <value>Name:</value>
            <align>right,vcenter</align>
        </textarea>

        <textarea name="urllabel" from="namelabel">
            <position>15,550</position>
            <value>URL:</value>
        </textarea>

        <textarea name="iconlabel" from="namelabel">
            <position>15,610</position>
            <value>Icon:</value>
        </textarea>

        <textarea name="podcastlabel" from="namelabel">
            <position>15,670</position>
            <value>Podcast:</value>
        </textarea>

        <textarea name="genre_text" from="title_text">
            <position>15,730</position>
            <value>Genre:</value>
        </textarea>

        <textarea name="channel_text" from="title_text">
            <position>15,790</position>
            <value>Channel:</value>
        </textarea>

        <!--Widgets-->

        <textedit name="name" from="basetextedit">
            <position>195,487</position>
        </textedit>

        <textedit name="url" from="basetextedit">
            <position>195,547</position>
        </textedit>

        <textedit name="icon" from="basetextedit">
            <position>195,607</position>
        </textedit>

        <imagetype name="dialogboxoverlay">
            <position>0,0</position>
            <filename>images/arclight_popup_large_overlay.png</filename>
        </imagetype>

        <checkbox name="podcast_check" from="basecheckbox">
            <position>195,673</position>
        </checkbox>

        <button name="cancel" from="basebutton">
            <position>235,850</position>
            <value>Cancel</value>
        </button>

        <button name="ok" from="basebutton">
            <position>435,850</position>
            <value>OK</value>
        </button>

    </window>

    <window name="config">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="item">
            <area>1620,-14,313,55</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
        </shape>

        <clock name="clock">
            <area>1620,-2,303,50</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <template>%DATE%, %TIME%</template>
        </clock>

        <shape name="infobox">
            <area>35,324,694,310</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <textarea name="title" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
            <value>News Subscriptions</value>
        </textarea>

        <textarea name="subtitle" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Choose the news sites you would like to read.</value>
        </textarea>

        <buttonlist name="category" from="baseshapebuttonlist">
            <position>0,669</position>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
        </buttonlist>

        <buttonlist name="sites" from="baserecordinglistwide">
            <area>786,557,1136,525</area>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
            <spacing>0</spacing>
        </buttonlist>

    </window>

</mythuitheme>
