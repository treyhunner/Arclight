<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd"> 
<mythuitheme>

    <window name="dvd_rip">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="infobox">
            <area>35,324,694,310</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <textarea name="warning" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="numbjobs" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <!-- Widgets -->

        <button name="prev" from="basebutton">
            <position>40,560</position>
        </button>

        <button name="cancel" from="prev">
            <position>215,560</position>
        </button>

        <button name="ripscreen" from="prev">
            <position>390,560</position>
        </button>

        <button name="next" from="prev">
            <position>565,560</position>
        </button>

        <textarea name="overall_text" from="warning">
        </textarea>

        <textarea name="job_text" from="numbjobs">
            <area>45,465,674,57</area>
        </textarea>

        <progressbar name="overall_progress" from="baseprogressbar">
            <position>122,440</position>
        </progressbar>

        <progressbar name="job_progress" from="baseprogressbar">
            <position>122,520</position>
        </progressbar>

    </window>

    <window name="title_dialog">
        <area>-1,-1,1920,1079</area>

        <imagetype name="fanart">
            <filename />
        </imagetype>

        <imagetype name="rightpanel_bg">
            <position>1100,0</position>
            <filename>images/editmetadata_leftpanelwide_bg.png</filename>
        </imagetype>

        <shape name="rightpanel_dark">
            <area>1238,0,682,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <textarea name="tit" from="basetextarea">
            <area>1260,234,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
            <value>Select a Title to Rip</value>
        </textarea>

        <textarea name="subt" from="basetextarea">
            <area>1260,285,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Select the parts of the DVD you wish to copy.</value>
        </textarea>

        <textarea name="filmname_label" from="basetextarea">
            <area>1140,392,250,30</area>
            <align>right,vcenter</align>
            <font>basesmall</font>
            <value>Film Name:</value>
        </textarea>

        <textedit name="name" from="basetextedit">
            <position>1396,384</position>
        </textedit>

        <textarea name="length_label" from="basetextarea">
            <area>1140,452,250,30</area>
            <align>right,vcenter</align>
            <font>basesmall</font>
            <value>Track Length:</value>
        </textarea>

        <textarea name="playlength" from="basetextarea">
            <area>1399,452,390,30</area>
            <align>left,vcenter</align>
            <font>basesmall</font>
            <value>0:00:00</value>
        </textarea>

        <textarea name="quality_label" from="basetextarea">
            <area>1140,512,250,30</area>
            <align>right,vcenter</align>
            <font>basesmall</font>
            <value>Rip Quality:</value>
        </textarea>

        <buttonlist name="quality" from="basewideselector">
            <position>1396,504</position>
        </buttonlist>

        <textarea name="audio_label" from="basetextarea">
            <area>1140,572,250,30</area>
            <align>right,vcenter</align>
            <font>basesmall</font>
            <value>Audio Track:</value>
        </textarea>

        <buttonlist name="audio" from="basewideselector">
            <position>1396,564</position>
        </buttonlist>

        <textarea name="subtitle_label" from="basetextarea">
            <area>1140,632,250,30</area>
            <align>right,vcenter</align>
            <font>basesmall</font>
            <value>Subtitle:</value>
        </textarea>

        <buttonlist name="subtitle" from="basewideselector">
            <position>1396,624</position>
        </buttonlist>

        <checkbox name="ripacthree" from="basecheckbox">
            <position>1476,694</position>
        </checkbox>

        <textarea name="ac3_label" from="basetextarea">
            <area>1520,698,450,30</area>
            <align>left,vcenter</align>
            <font>basesmall</font>
            <value>Rip AC-3 Audio</value>
        </textarea>

        <button name="view" from="basebutton">
            <position>1476,754</position>
            <value>Preview this title</value>
        </button>

        <checkbox name="ripcheck" from="basecheckbox">
            <position>1476,814</position>
        </checkbox>

        <textarea name="rip_label" from="basetextarea">
            <area>1520,818,450,30</area>
            <align>left,vcenter</align>
            <font>basesmall</font>
            <value>Rip This Track</value>
        </textarea>

        <textarea name="numb_titles" from="basetextarea">
            <area>1520,918,450,30</area>
            <value>Title 1 of 1</value>
            <align>left,vcenter</align>
        </textarea>

        <button name="prev_title" from="basebutton">
            <position>1280,913</position>
            <value>Previous Title</value>
        </button>

        <button name="next_title" from="basebutton">
            <position>1720,913</position>
            <value>Next Title</value>
        </button>

        <button name="ripaway" from="basebutton">
            <position>1476,994</position>
            <value>Begin Ripping</value>
        </button>

    </window>

</mythuitheme>
