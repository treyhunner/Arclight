<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="moviesui">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="item">
            <area>1620,-14,313,55</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
        </shape>

        <clock name="clock">
            <area>1620,-2,303,50</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <template>%DATE%, %TIME%</template>
        </clock>

        <shape name="infobox">
            <area>35,324,694,310</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <textarea name="movietitle" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
            <value>Movie Times</value>
        </textarea>

        <textarea name="theatername" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="ratingvalue" from="basetextarea">
            <area>45,420,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <template>Rated %1</template>
        </textarea>

        <textarea name="runningtimevalue" from="basetextarea">
            <area>45,455,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <template>Rated %1</template>
        </textarea>

        <textarea name="showtimesvalue" from="basetextarea">
            <area>45,515,674,100</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <align>left</align>
            <cutdown>yes</cutdown>
        </textarea>

        <buttontree name="movietreelist">
            <area>786,549,1136,525</area>
            <numlists>1</numlists>
            <buttonlist name="listtemplate" from="baserecordinglistwide" />
        </buttontree>

    </window>

</mythuitheme>
